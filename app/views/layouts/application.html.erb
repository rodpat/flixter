<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="flex-content-container">
      <nav class="navbar navbar-expand-lg navbar-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarToggler">
          <%= link_to 'Flixter', root_path, class: 'navbar-brand' %>
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
              <li class="nav-item">
                <%= link_to 'See All Courses', courses_path , class:'nav-link'%>
              </li>
          </ul>
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
            <%else%>
              <li class="nav-item va">
                <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
              </li>
            <%end%>
          </ul>
      </nav>

      
      <% if notice.present? %>
        <p class="alertalert-info"><%= notice%></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert%></p>
      <% end %>

      <%= yield %>
    </div>

    <footer>
      <div class="container">
        <b>Teachers</b>
        <br>
        <%= link_to 'Teach a Course', new_instructor_course_path %>
      </div>
    </footer>

  </body>
</html>
