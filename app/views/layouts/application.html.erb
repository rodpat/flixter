<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="http://vjs.zencdn.net/6.2.7/video-js.css">

  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar navbar-expand-lg navbar-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarToggler">
          <%= link_to 'Flixter', root_path, class: 'navbar-brand' %>
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
              <li class="nav-item">
                <%= link_to 'See All Courses', courses_path , class:'nav-link'%>
              </li>
          </ul>
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
            <%else%>
              <li class="nav-item v">
                <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
              </li>
            <%end%>
          </ul>
      </nav>

      
      <% if notice.present? %>
        <p class="alertalert-info"><%= notice%></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert%></p>
      <% end %>

      <%= yield %>
    </div>

    <footer>
      <div class="container">
        <div class="row mr-auto ml-auto ">
          <div class="col-12 col-sm-3 ">
            <b>Teachers</b>
            <br>
            <%= link_to 'Teach a Course', new_instructor_course_path, class:'text-footer-links' %>
            <br>
            <%= link_to 'My Dashboard', dashboard_path, class:'text-footer-links' %>
          </div>
          <div class="col-12 col-sm-3">
            <b>About</b>
            <br>
            <%= link_to 'Team', '#', class:'text-footer-links' %>
            <br>
            <%= link_to 'Carrers', '#', class:'text-footer-links' %>
            <br>
            <%= link_to 'Privacy Policy', privacy_path, class:'text-footer-links' %>
          </div>
          <div class="col-12 col-sm-3 text-footer">
            <b class="title">Contact</b>
            <br>
            testrod[@]gmail.com
            <br>
            13 Learning Ave.
            <br>
            City Test, NY, 12345
          </div>
          <div class="col-12 col-sm-3 social">
            <b>Social</b>
            <br><br>
            <%= link_to 'https://github.com/rodpat' do %>
              <span class="fa fa-github-square fa-2x social-button"></span>
            <% end %> 
            <span class="fa fa-facebook-square fa-2x social-button"></span>
            <span class="fa fa-twitter-square fa-2x social-button"></span>
          </div>
        </div>
        
      </div>
    </footer>

    <script src="http://vjs.zencdn.net/6.2.7/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </body>
</html>
